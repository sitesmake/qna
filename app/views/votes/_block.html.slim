- if data.kind_of?(Question)
	- path_vote_up = vote_question_path(points: 1)
	- path_vote_down = vote_question_path(points: -1)
	- path_cancel_vote = cancel_vote_question_path
- else
	- path_vote_up = vote_answer_path(id: data.id, points: 1)
	- path_vote_down = vote_answer_path(id: data.id, points: -1)
	- path_cancel_vote = cancel_vote_answer_path(id: data.id)

| rating:&nbsp;
span.rating = data.rating
- if current_user && !current_user.author_of?(data) && !current_user.voted_for?(data)
  | &nbsp;
  = link_to 'vote up', path_vote_up, id: 'vote-up', class: 'vote', method: :post, data: { remote: true }
  | &nbsp;
  = link_to 'vote down', path_vote_down, id: 'vote-down', class: 'vote', method: :post, data: { remote: true }
- if current_user && current_user.voted_for?(data)
  | &nbsp;
  = link_to 'cancel vote', path_cancel_vote, id: 'cancel-vote', class: 'cancel', method: :delete, data: { remote: true }