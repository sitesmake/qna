<% if @resource_type == "questions" %>
	<% if @comment.errors.present? %>
		<% @comment.errors.full_messages.each do |message| %>
			$('.question-errors').html('<%= j message %>');
		<% end %>
	<% else %>
		$('#question').html('<%= j render @commentable %>');
	  $('.question-errors').html('');
	<% end %>
<% end %>

<% if @resource_type == "answers" %>
	<% if @comment.errors.present? %>
		<% @comment.errors.full_messages.each do |message| %>
			$('.answer-<%= @commentable.id %>-errors').html('<%= j message %>');
		<% end %>
	<% else %>
		$('.answer-<%= @commentable.id %>').html('<%= j render @commentable %>');
	  $('.answer-<%= @commentable.id %>-errors').html('');
	<% end %>
<% end %>