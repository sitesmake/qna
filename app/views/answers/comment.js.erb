<% if @comment.errors.present? %>
	<% @comment.errors.full_messages.each do |message| %>
		$('.answer-<%= @commentable.id %>-errors').html('<%= j message %>');
	<% end %>
<% else %>
	$('.answer-<%= @commentable.id %>').html('<%= j render @commentable %>');
  $('.answer-<%= @commentable.id %>-errors').html('');
<% end %>
